<?xml version="1.0" encoding="utf-8"?>
<com.droi.webviewwithlistview.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.droi.webviewwithlistview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:text="Button" />

        <com.droi.webviewwithlistview.CustomWebview
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="100px" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:text="Button" />

    </LinearLayout>

</com.droi.webviewwithlistview.CustomScrollView>
